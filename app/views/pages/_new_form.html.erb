<div id="add_page" class="modal" style="display: none;">
	<%= form_for( @new_page, :style => "margin: 0px;" ) do |f| %>
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>Add a Page</h3>
  </div>
  <div class="modal-body">
		  <% if @new_page.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@new_page.errors.count, "error") %> prohibited this page from being saved:</h2>

		      <ul>
		      <% @new_page.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

		  <div class="field">
		    <%= f.label :title %>
		    <%= f.text_field :title %>
		  </div>
		  <div class="field">
		    <%= f.label :parent %>
		    <%= f.collection_select(:parent, @pages, :id, :title, :include_blank => true)%>
		  </div>

  </div>
  <div class="modal-footer">
  	<div class="modal-footer-padding">
  		<a href="#" class="btn secondary" data-dismiss="modal">Cancel</a>
  		<%= f.submit :class => "btn btn-primary" %>
      <div class="clear"></div>
    </div>
  </div>
  <% end %>
</div>