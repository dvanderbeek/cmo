<h1>Listing pages</h1>

<table class="table">
	<thead>
  <tr>
    <th>Title</th>
    <th>Slug</th>
    <th>Order</th>
    <th>Parent</th>
    <th>Content</th>
    <th>Seo title</th>
    <th>Seo meta</th>
    <th>Seo keywords</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
	</thead>
	<tbody>
<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.slug %></td>
    <td><%= page.position %></td>
    <td><%= page.parent %></td>
    <td><%= page.content %></td>
    <td><%= page.seo_title %></td>
    <td><%= page.seo_meta %></td>
    <td><%= page.seo_keywords %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
	</tbody>
</table>

<br />

