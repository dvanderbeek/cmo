<!DOCTYPE html>
<html lang="en">
<head>
  <title>Condo Motion</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	  <div id="wrap">
			<div id="main" class="container" style="padding-top: <%= yield :padding %>;">
				<% if flash[:alert] %>
			    <p class="alert alert-error"><%= flash[:alert] %></p>
			  <% end %>
			  <% if flash[:notice] %>
			    <p class="alert alert-success"><%= flash[:notice] %></p>
			  <% end %>

				<%= yield %>

			</div> <!-- /container -->
		</div> <!-- /wrap -->

	  <%= render 'devise/footer'%>

</body>
</html>
