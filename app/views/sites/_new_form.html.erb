<div id="add_site" class="modal" style="display: none;">
	<%= form_for(@new_site, :html => {:multipart => true, :style => "margin: 0px;"}) do |f| %>
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>Add a Page</h3>
  </div>
  <div class="modal-body">
		  <% if @new_site.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@new_site.errors.count, "error") %> prohibited this page from being saved:</h2>

		      <ul>
		      <% @new_site.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

		    <div class="field">
			  	<%= f.label :title %>
			    <%= f.text_field :title, :class => 'title' %>
			  </div>
			  <div class="field">
			    <%= f.label :subdomain %>
			    <%= f.text_field :subdomain %>
			  </div>
			  <div class="field">
			    <%= f.label :robots %>
			    <%= f.text_area :robots, :rows => 5 %>
			  </div>
			  <div class="field">
			    <%= f.collection_select(:layout_id, Layout.all, :id, :title)%>
			  </div>

			  <%= f.label :favicon %>
			  <%= f.file_field :favicon %>

				<div class="field">
			    <%= hidden_field :page, :title, :value => "Home" %>
			  </div>

  </div>
  <div class="modal-footer">
  	<div class="modal-footer-padding">
  		<a href="#" class="btn secondary" data-dismiss="modal">Cancel</a>
  		<%= f.submit :class => "btn btn-primary" %>
      <div class="clear"></div>
    </div>
  </div>
  <% end %>
</div>
