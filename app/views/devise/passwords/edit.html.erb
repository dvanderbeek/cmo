		<div class="row">
			<%= render 'logo' %>
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <div class="row">
      	<%= devise_error_messages! %>
  			<%= f.hidden_field :reset_password_token %>
      	<div class="span4 offset4" style="box-shadow: 0px 0px 14px #ccc; padding: 20px;">
      		<h3 style="margin-bottom: 20px;">Reset Your Password</h3>
      		<%= f.password_field :password, :class => "span4 large", :style => "margin-bottom:20px;", :placeholder => "Password" %>
      		<%= f.password_field :cofirm_password, :class => "span4 large", :style => "margin-bottom:20px;", :placeholder => "Confirm Password" %>
      		<%= f.submit "Change my Password", :class => "btn btn-large", :style => "font-weight: bold; margin: 0px;" %>
					<%= link_to "Cancel", home_index_path, :style => "font-weight: bold; margin-left: 20px; position: relative; top: 3px;" %>
				</div>
      </div>
      <% end %>

      <div class="row" style="margin-bottom: 20px;">

      </div>
   </div>